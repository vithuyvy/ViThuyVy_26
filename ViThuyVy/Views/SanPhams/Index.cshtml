@model IEnumerable<ViThuyVy.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sản Phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Masanpham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaNhaCungCap)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Masanpham)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenSanPham)
    </td>
    <td>
        @Html.Raw(item.MaNhaCungCap)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Masanpham }) |
        @Html.ActionLink("Details", "Details", new { id = item.Masanpham }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Masanpham })
    </td>
</tr>
}

</table>
